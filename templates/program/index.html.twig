{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
<h1>Toutes les séries de la table program :</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button>Search</button>
    {{ form_end(form) }}

{% for program in programs %}
    <div>
        <h2>{{ loop.index }} / {{ program.title }}</h2>
        <p>{{ program.summary }}</p>
        <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
    </div>
{% else %}
    Aucune série trouvée.
{% endfor %}
{% endblock %}